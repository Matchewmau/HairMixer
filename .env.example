# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CORS
CORS_ALLOW_ALL=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT (optional override)
JWT_SIGNING_KEY=

# Recommendation cache
RECOMMENDATION_CACHE_TIMEOUT=3600

# Overlay / Gemini AI
# Enable to use Gemini AI for advanced overlays; otherwise basic compositing is used.
OVERLAY_AI_ENABLED=true
# Credentials required by gemini-webapi (see https://pypi.org/project/gemini-webapi/#authentication)
GEMINI_SECURE_1PSID=
GEMINI_SECURE_1PSIDTS=
# Optional: model and timeout
GEMINI_MODEL=G_2_5_FLASH
GEMINI_TIMEOUT=120

# Basic overlay tuning
OVERLAY_BASIC_WIDTH_RATIO=0.75
OVERLAY_Y_OFFSET_RATIO=0.03
OVERLAY_BLUR_RADIUS=0.8